<img src="{{ asset('img/symfony_black_03.png') }}" alt="imagetest">
<h1>La liste des formations de la classe {{ classe}} dans la salle {{ salle }}</h1>
{% if tab is empty %}
<h4 style="color: crimson">Tab vide</h4>
{% else %}
<table border="1">
    <tr>
        <td>Ref</td>
        <td>Titre</td>
        <td>Description</td>
        <td>NP</td>
        <td>Participer</td>

    </tr>
    {% set s=0 %}
    {% for i in tab  %}
        {#{% if i.Description=="formation pratique" %}#}
        <tr>
            {% set s=s+i.nb_participants %}
            <td>{{ i.ref }}</td>
            <td>{{ i.Titre|upper }}</td>
            <td>{{ i.Description }}</td>
            <td>{{ i.nb_participants }}</td>
            <td>
                {% if i.nb_participants == 0 %}
                <a href={{ path('app_reservation') }}>Participer</a>
                {% else %}
                    complet
                    {% endif %}
            </td>
        </tr>
{#        {% endif %}#}
    {% endfor %}
</table>
{% endif %}
